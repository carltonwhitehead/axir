    'event' => $this->event
);
echo $this->partial('events/event-label.phtml', $eventLabelModel);
?>
<h2>25 Newest Runs</h2>
<table class="results" id="newest-results">
    <thead>
        <tr>
            <th>Timestamp / Numbers</th>
            <th>Driver / Car</th>
