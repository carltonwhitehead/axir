    foreach ($this->runs as $run):
        $driver = $run->driver;
        ?>
        <tr>
            <td>
                <?= $run->getTimeOfDay() ?><br />
                <?php
                $driverHref = $this->baseUrl(
                    '/events/driver/event-id/' . $this->event->id .
                    '/driver-id/' . $driver->id
                );
                ?>
                <a href="<?= $driverHref ?>">
                    <?= $this->escape($driver->category->prefix.$driver->class->name.' '.$driver->number) ?>
                </a>
            </td>
            <td>
                    <?= $this->escape($driver->name) ?><br />
                    <?= $this->escape($driver->car) ?>
            </td>
            <?php
            echo $this->partial('events/run-time-cell.phtml', array(
                'run'=>$run
            ));
            ?>
            <td>
                <?= $run->timePaxWithPenalty ?>
            </td>
        </tr>
        <?php
    endforeach;
    if (count($this->runs) === 0):
        ?>
        <tr>
            <td>No runs (yet?)</td>
            <td colspan="2"></td>
        </tr>
        <?php
    endif;
    ?>
